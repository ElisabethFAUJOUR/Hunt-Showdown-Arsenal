<%- include('partials/header') %>

    <main class="main">
        <div class="main-container">
            <h1 class="main-title fade-in">Filter</h1>
            <div class="filter-container fade-in">
                <div class="search search-tools">
                    <input type="text" class="search-bar" placeholder="SEARCH">
                </div>
            </div>

            <% tools.forEach(tool => { %>
                <div class="card tool-card fade-in" id="<%= tool.id %>">
                    <div class="card-header">
                        <h1 class="name"><%= tool.name %></h1>
                        <div class="header-cost">
                            <h2 class="cost"><%= tool.cost %></h2>
                            <img src="../img/logo/hunt-dollars.png" alt="Hunt Dollars">
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="body-info">
                            <p><%= tool.description %></p>
                            <img class="body-img" src="../<%= tool.image %>" alt="<%= tool.name %>">
                        </div>

                        <% if (tool.stats) { %>
                            <div class="body-stats">
                                <% if (tool.stats.damage) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Damage</p>
                                            <p><%= tool.stats.damage %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.damage/162)*100 %>%"></span>
                                        </div>
                                    </div>
                                    <% } %>

                                <% if (tool.stats.damage_thrown) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Damage Thrown</p>
                                            <p><%= tool.stats.damage_thrown %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.damage_thrown/1)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.damage_per_tick) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Damage Per Tick</p>
                                            <p><%= tool.stats.damage_per_tick %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.damage_per_tick/32)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.effect_radius) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Effect Radius</p>
                                            <p><%= tool.stats.effect_radius %>m</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.effect_radius/3.5)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.effect_duration) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Effect Duration</p>
                                            <p><%= tool.stats.effect_duration %>s</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.effect_duration/300)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.throw_range) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Throw Range</p>
                                            <p><%= tool.stats.effect_duration %>m</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.throw_range/115)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.fuse_timer) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Fuse Timer</p>
                                            <p><%= tool.stats.fuse_timer %>s</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.fuse_timer/6)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.effective_range) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Effective Range</p>
                                            <p><%= tool.stats.effective_range %>m</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.effective_range/60)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.sighted_range) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Sighted Range</p>
                                            <p><%= tool.stats.sighted_range %>m</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.sighted_range/18)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.rate_of_fire) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Rate of Fire</p>
                                            <p><%= tool.stats.rate_of_fire %>rpm</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.rate_of_fire/48)*100 %>%"v></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.spread) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Spread</p>
                                            <p><%= tool.stats.spread %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.spread/52.8)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.sway) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Sway</p>
                                            <p><%= tool.stats.sway %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.sway/113)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.vertical_recoil) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Vertical Recoil</p>
                                            <p><%= tool.stats.vertical_recoil %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.vertical_recoil/5)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.reload_speed) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Reload Speed</p>
                                            <p><%= tool.stats.reload_speed %>s</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.reload_speed/4.4)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.muzzle_velocity) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Muzzle Velocity</p>
                                            <p><%= tool.stats.muzzle_velocity %>m/s</p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.muzzle_velocity/130)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.melee_damage) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Melee Damage</p>
                                            <p><%= tool.stats.melee_damage %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.melee_damage/75)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.heavy_melee_damage) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Heavy Melee Damage</p>
                                            <p><%= tool.stats.heavy_melee_damage %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.heavy_melee_damage/142)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.stamina_consumption_light) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Light Melee Stamina</p>
                                            <p><%= tool.stats.stamina_consumption_light %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.stamina_consumption_light/40)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.stamina_consumption_heavy) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Heavy Melee Stamina</p>
                                            <p><%= tool.stats.stamina_consumption_heavy %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.stamina_consumption_heavy/55)*100 %>%"v></span>
                                        </div>
                                    </div>
                                <% } %>

                                <% if (tool.stats.stamina_consumption_throw) { %>
                                    <div class="stat-row">
                                        <div class="stat-info">
                                            <p>Throw Stamina</p>
                                            <p><%= tool.stats.stamina_consumption_throw %></p>
                                        </div>
                                        <div class="stat-bar">
                                            <span class="grey-line"></span>
                                            <span class="red-line" style="width:<%=(tool.stats.stamina_consumption_throw/25)*100 %>%"></span>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        <% } %>  
                    </div>
                </div>
            <% }) %>    
        </div>
    </main>

<%- include('partials/footer') %>     

<!-- Common Css file for Weapons/Tools/Consumables pages -->
<link rel="stylesheet" href="../css/list-card.css">
<!-- Specific Css file for page Tools -->
<link rel="stylesheet" href="../css/list-card-tools-consumables.css">  
<!-- Specific Js file for page Tools -->
<script src="../js/tool.js"></script>

</body>
</html>